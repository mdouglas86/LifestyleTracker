<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="practicum.otterbein.lifestyletracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="25" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="practicum.otterbein.lifestyletracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="practicum.otterbein.lifestyletracker.ActionBar"
            android:label="@string/title_activity_action_bar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="practicum.otterbein.lifestyletracker.Exercise" />
        <activity android:name="practicum.otterbein.lifestyletracker.Diet1" />
        <activity android:name="practicum.otterbein.lifestyletracker.Goals" />
        <activity android:name="practicum.otterbein.lifestyletracker.Settings" />
    </application>

</manifest>